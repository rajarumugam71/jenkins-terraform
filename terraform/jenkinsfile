
pipeline{
  agent any
  environment {
  PATH = "${PATH}|${getTerraformPath()}"
  echo PATH
}
  stages{
    stage('terraform init'){

      steps{
          sh "terraform init"

      }
    }

  }

}

def getTerraformPath(){

   def   tfHome =  tool name: 'terraform-12', type: 'terraform'
   echo tfHome
   return tfHome
}
