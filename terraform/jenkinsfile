
pipeline{
  agent any
  environment {
  PATH = "${PATH}"

}
  stages{
    stage('terraform init'){

      steps{
           sh 'pwd'
           sh 'cd var/lib/jenkins/workspace/terraform/terraform'
            sh 'pwd'
           sh "terraform init"

      }
    }

  }

}

def getTerraformPath(){

   def   tfHome =  tool name: 'terraform-12', type: 'terraform'

   echo tfHome
   return tfHome
}
